<odoo>
    <!-- Actions -->
    
   <record id="action_mgs_sms_gateway" model="ir.actions.act_window">
        <field name="name">SMS Template</field>
        <field name="res_model">mgs_sms_gateway.template</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                No Templates.
            </p>
        </field>
    </record>

    <!-- Views -->

    <record id="view_mgs_sms_template_list" model="ir.ui.view">
        <field name="name">View SMS Template List</field>
        <field name="model">mgs_sms_gateway.template</field>
        <field name="arch" type="xml">
            <list string="Templates">
                <field name="name"/>
                <field name="model_id"/>
                <field name="usage"/>
            </list>
        </field>
    </record>

    <record id="view_mgs_sms_template_form" model="ir.ui.view">
        <field name="name">View SMS Template Form</field>
        <field name="model">mgs_sms_gateway.template</field>
        <field name="arch" type="xml">
            <form string="Shift">
                <sheet>
                   <group>
                     <group>
                        <field name="name"/>
                        <field name="model_id"/>
                        <field name="usage"/>
                    </group>
                    <notebook>
                        <page name="body" string="Message">
                            <field name="body"/>
                        </page>
                    </notebook>
                   </group>
                </sheet>
            </form>
        </field>
    </record>


    <!-- Menu Items -->
    <menuitem
        id="mgs_gym_service_menu"
        name="SMS Template"
        parent="mgs_gym.mgs_gym_configuration_menu"
        sequence="7"
        action="action_mgs_sms_gateway"
        groups="base.group_system"
    />
</odoo>