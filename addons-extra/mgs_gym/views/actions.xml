<odoo>
    <!-- Window Actions -->

    <record id="action_mgs_gym_dashboard" model="ir.actions.client">
        <field name="name">Gym Dashboard</field>
        <field name="tag">mgs_gym.Dashboard</field>
    </record>


    <record id="action_gym_partner" model="ir.actions.act_window">
        <field name="name">Partner</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="view_id" ref="view_gym_partner_kanban"/>
        <field name="domain">[("is_gym_member","=",True)]</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                No GYM partners.
            </p>
        </field>
    </record>

     <record id="mgs_gym_res_config_settings_action" model="ir.actions.act_window">
        <field name="name">Settings</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_mode">form</field>
        <field name="context">{'module' : 'mgs_gym', 'bin_size': False}</field>
    </record>

     <record id="action_gym_user" model="ir.actions.act_window">
        <field name="name">User</field>
        <field name="res_model">res.users</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="view_id" ref="view_gym_users_kanban_inherit"/>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                No GYM Users.
            </p>
        </field>
    </record>

      <record id="action_gym_equipment" model="ir.actions.act_window">
        <field name="name">Equipment</field>
        <field name="res_model">mgs_gym.equipment</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="view_id" ref="view_mgs_gym_equipment_kanban"/>
        <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    No Equipments.
                </p>
            </field>
     </record>

    <record id="action_gym_memebrship" model="ir.actions.act_window">
        <field name="name">Membership</field>
        <field name="res_model">mgs_gym.membership</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                No Memberships.
            </p>
        </field>
    </record>

    <record id="action_mgs_gym_branch" model="ir.actions.act_window">
        <field name="name">Branch</field>
        <field name="res_model">mgs_gym.branch</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                No Branches.
            </p>
        </field>
    </record>

    <record id="action_mgs_gym_shift" model="ir.actions.act_window">
        <field name="name">Shift</field>
        <field name="res_model">mgs_gym.shift</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                No Shifts.
            </p>
        </field>
    </record>

      <record id="action_mgs_gym_class" model="ir.actions.act_window">
        <field name="name">Class</field>
        <field name="res_model">mgs_gym.class</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                No Classes.
            </p>
        </field>
    </record>

    <record id="action_mgs_gym_measurement" model="ir.actions.act_window">
        <field name="name">Measurements</field>
        <field name="res_model">mgs_gym.measurement</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="action_mgs_gym_meal_plan" model="ir.actions.act_window">
        <field name="name">Meal Plans</field>
        <field name="res_model">mgs_gym.meal_plan</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="action_gym_measurement_reporting_wizard" model="ir.actions.act_window">
        <field name="name">Measurement Report</field>
        <field name="res_model">mgs_gym.measurement_report_wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="mgs_gym_measurement_report_wizard_form_view" />
        <field name="target">new</field>
    </record>

    <record id="action_gym_membership_reporting_wizard" model="ir.actions.act_window">
        <field name="name">Membership Report</field>
        <field name="res_model">mgs_gym.membership_report_wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="mgs_gym_membership_report_wizard_form_view" />
        <field name="target">new</field>
    </record>


    <record id="action_mgs_gym_product_service" model="ir.actions.act_window">
        <field name="name">Products and Services</field>
        <field name="res_model">product.template</field>
        <field name="view_mode">kanban,list,form</field>
    </record>
     <record id="action_mgs_gym_product_attribute" model="ir.actions.act_window">
        <field name="name">Product Attributes</field>
        <field name="res_model">product.attribute</field>
        <field name="view_mode">list,form</field>
    </record>
      <record id="action_mgs_gym_sales" model="ir.actions.act_window">
        <field name="name">Sale</field>
        <field name="res_model">sale.order</field>
        <field name="view_mode">list,form</field>
    </record>



    <!-- Server Actions -->
            <!-- Server Action to trigger bulk SMS sending -->
            <record id="action_send_promotional_sms_to_partners" model="ir.actions.server">
                <field name="name">Send Promotional SMS</field>
                <!-- The model should be res.partner since the action runs on the partner list view -->
                <field name="model_id" ref="base.model_res_partner"/> 
                <field name="binding_model_id" ref="base.model_res_partner"/>
                <field name="binding_view_types">list</field>
                <field name="state">code</field>
                <field name="code">
                    action = records.action_send_promotional_sms()
                </field>
            </record>



</odoo>
