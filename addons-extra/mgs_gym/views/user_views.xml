<odoo>
    <record id="view_gym_user_tree" model="ir.ui.view">
        <field name="name">res.users.gym.lst</field>
        <field name="model">res.users</field>
        <field name="priority">5</field>
        <field name="arch" type="xml">
            <list string="Users">
                <field name="avatar_128" widget="image" options="{'size': [24, 24], 'img_class': 'o_avatar rounded'}" width="30" nolabel="1"/>
                <field name="name" readonly="1"/>
                <field name="login" readonly="1" optional="show"/>
                <field name="lang" optional="hide"/>
                <field name="login_date" readonly="1" optional="hide"/>
                <field name="role" widget="badge"/>
                <field name="branch_ids"  widget="many2many_tags"/>
                <field name="default_branch_id" />
            </list>
        </field>
    </record>
    <record id="mgs_gym_view_users_form_inherit_custom_fields" model="ir.ui.view">
        <field name="name">res.users.form.inherit.custom.fields</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
           <xpath expr="//h5[@name='h5_phone']" position="after">
                
                <h5 name="h5_branch" class="d-flex align-items-baseline mb-0">
                    <i class="fa fa-fw fa-building-o text-primary" title="Branch"/>
                    <field name="branch_ids" 
                           placeholder="Branch" 
                           required="True" 
                           widget="many2many_tags"
                           class="w-75"/>
                </h5>
                 <h5 name="h5_branch" class="d-flex align-items-baseline mb-0">
                    <i class="fa fa-fw fa-building-o text-primary" title="Default Branch"/>
                    <field name="default_branch_id" 
                           placeholder="Default Branch" 
                           domain="[('id', 'in', branch_ids)]"
                           class="w-75"/>
                </h5>
                
            </xpath>
            
            </field>
    </record>
    <record id="view_gym_users_kanban_inherit" model="ir.ui.view">
        <field name="name">res.users.kanban.gym.inherit</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_res_users_kanban"/>
        <field name="arch" type="xml">
            <xpath expr="//main" position="inside">
                <div class="mt-2 d-flex flex-column align-items-start gap-1">
                    <div t-if="record.branch_ids.raw_value" class="d-flex align-items-center text-muted">
                        <i class="fa fa-building-o me-1 text-secondary" title="Branch"/>
                        <field name="branch_ids"/>
                    </div>
                </div>
            </xpath>
            <xpath expr="//kanban" position="inside">
                <field name="branch_ids"/>
            </xpath>
        </field>
    </record>
</odoo>