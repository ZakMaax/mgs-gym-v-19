<odoo>
    <record id="view_mgs_gym_branch_tree" model="ir.ui.view">
        <field name="name">mgs_gym.branch.tree</field>
        <field name="model">mgs_gym.branch</field>
        <field name="arch" type="xml">
            <list string="Gym Branches">
                <field name="name"/>
                <field name="gender"/>
                <field name="manager_id"/>
                <field name="is_active"/>
                <field name="address"/>
                <field name="analytic_account_id"/>
                <field name="reminder_days"/>
            </list>
        </field>
    </record>

    <record id="view_mgs_gym_branch_form" model="ir.ui.view">
        <field name="name">mgs_gym.branch.form</field>
        <field name="model">mgs_gym.branch</field>
        <field name="arch" type="xml">
            <form string="Gym Branch">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="gender"/>
                        <field name="manager_id"/>
                        <field name="is_active"/>
                        <field name="address"/>
                    </group>
                    <group>
                        <field name="company_id"/>
                        <field name="analytic_account_id"/>
                        <field name="reminder_days"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
