<odoo>
    <record id="view_mgs_gym_class_tree" model="ir.ui.view">
        <field name="name">mgs_gym.class.tree</field>
        <field name="model">mgs_gym.class</field>
        <field name="arch" type="xml">
            <list string="Classes">
                <field name="name"/>
                <field name="shift_id"/>
                <field name="coach_id"/>
            </list>
        </field>
    </record>

    <record id="view_mgs_gym_class_form" model="ir.ui.view">
        <field name="name">mgs_gym.class.form</field>
        <field name="model">mgs_gym.class</field>
        <field name="arch" type="xml">
            <form string="Class">
                <sheet>
                   <group>
                        <field name="name"/>
                        <field name="shift_id"/>
                        <field name="coach_id"/>
                   </group>
                    <notebook>
                        <page name="description" string="Description">
                            <field name="description"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="mgs_gym_class_search_view" model="ir.ui.view">
        <field name="name">Gym Class Search View</field>
        <field name="model">mgs_gym.class</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                
                <filter string="Archived" 
                        name="archived"
                        domain="[('active', '=', False)]"
                />

                

                <filter string="Shift" name="group_by_shift" context="{'group_by' : 'shift_id'}"/>
                <filter string="Coach" name="group_by_coach" context="{'group_by' : 'coach_id'}"/>
            </search>
        </field>
    </record>
</odoo>