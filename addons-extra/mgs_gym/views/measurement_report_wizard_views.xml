<?xml version="1.0" encoding="utf-8"?>
<odoo>

      <record id="mgs_gym_measurement_report_wizard_form_view" model="ir.ui.view">
        <field name="name">mgs_gym.measurement_report_wizard_form_view</field>
        <field name="model">mgs_gym.measurement_report_wizard</field>
        <field name="arch" type="xml">
            <form string="Measurement Report">
                <sheet>
                    <group>
                        <field name="partner_id"/>
                        <field name="date_from"/>
                        <field name="date_to"/>
                    </group>
                     <footer>
                        <button class="btn btn-primary" string="Print" type="object" name="action_print_report" />
                        <button class="btn btn-success" string="Print Excel" type="object" name="action_generate_excel" />
                        <button class="btn btn-danger" string="Cancel"  special="cancel" />
                    </footer>
                </sheet>
            </form>

        </field>
    </record>

</odoo>
