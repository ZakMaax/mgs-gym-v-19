<odoo>
    <record id="view_mgs_gym_shift_tree" model="ir.ui.view">
        <field name="name">mgs_gym.shift.tree</field>
        <field name="model">mgs_gym.shift</field>
        <field name="arch" type="xml">
            <list string="Shifts">
                <field name="name"/>
                <field name="branch_id"/>
                <field name="coach_id"  widget="many2many_tags"/>
                <field name="start_time" widget="float_time"/>
                <field name="end_time" widget="float_time"/>
                <field name="capacity"/>
            </list>
        </field>
    </record>

    <record id="view_mgs_gym_shift_form" model="ir.ui.view">
        <field name="name">mgs_gym.shift.form</field>
        <field name="model">mgs_gym.shift</field>
        <field name="arch" type="xml">
            <form string="Shift">
                <sheet>
                   <group>
                     <group>
                        <field name="name"/>
                        <field name="branch_id"/>
                        <field name="company_id"/>
                        <field name="coach_id"  widget="many2many_tags"/>
                        <field name="start_time" widget="float_time"/>
                        <field name="end_time" widget="float_time"/>
                    </group>
                    <group>
                        <field name="active"/>
                        <field name="capacity"/>
                    </group>
                   </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="mgs_gym_shift_search_view" model="ir.ui.view">
        <field name="name">Gym Shift Search View</field>
        <field name="model">mgs_gym.shift</field>
        <field name="arch" type="xml">
            <search>
                <filter string="Archived" 
                        name="archived"
                        domain="[('active', '=', False)]"
                />

                <filter string="Branch" name="group_by_branch" context="{'group_by' : 'branch_id'}"/>
            </search>
        </field>
    </record>
</odoo>
