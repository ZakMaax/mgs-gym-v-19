<?xml version="1.0" encoding="utf-8"?>
<odoo>
     <record id="mgs_sale_report_wizard_form_view" model="ir.ui.view">
        <field name="name">Sales report Wizard Form</field>
        <field name="model">mgs_sale.sale_report</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                           <field name="company_id"/>
                           <field name="team_id"/>
                           <field name="user_id"/>
                           <field name="partner_id"/>
                           <field name="currency_id"/>
                           <field name="sales_tag_ids"/>
                        </group>
                        <group>
                           <field name="date_from"/>
                           <field name="date_to"/>
                           <field name="product_id"/>
                           <field name="categ_id"/>
                           <field name="parent_categ_id"/>
                           <field name="report_type"/>
                           <field name="group_by"/>
                        </group>
                    </group>
                    <footer>
                        <button class="btn btn-primary" string="Print" type="object" name="action_print_report" />
                        <button class="btn btn-danger" string="Cancel"  special="cancel" />
                    </footer>
               </sheet>
            </form>
        </field>
    </record>
</odoo>
