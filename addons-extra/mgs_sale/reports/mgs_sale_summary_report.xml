<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="mgs_sale_summary_report">
    <t t-call="web.html_container">
        <t t-call="web.external_layout">
            <t t-set="report_data" t-value="docs[0].get_summary_sales_data()"/>
            <div class="page">
                <h2 class="report-title"><t t-esc="docs[0].group_by.title()"/> Sales Summary Report</h2>
               <p class="fw-bold">
                    From (<t t-esc="docs[0].date_from"/>) - To (<t t-esc="docs[0].date_to"/>)
                </p>

                <table class="o_report_table" style="width:100%; border-collapse:collapse;">
                    <thead>
                        <tr class="thead" style="background-color: #0d6efd; color: white;">
                            <th style="width:40%">
                                <!-- Use the wizard's grouping selection from the record -->
                                <t t-esc="docs[0].group_by == 'customer' and 'Customer' or 'Product'"/>
                            </th>
                            <th style="width:15%; text-align:right;">Ordered Qty</th>
                            <th style="width:15%; text-align:right;">Delivered Qty</th>
                            <th style="width:15%; text-align:right;">Invoiced Qty</th>
                            <th style="width:15%; text-align:right;">Amount</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-if="report_data">
                            <t t-foreach="report_data" t-as="line">
                                <tr class="o_data_row">
                                    <td style="padding:6px 8px; border-bottom:1px solid #efefef;">
                                        <t t-esc="line.get('group_name')"/>
                                    </td>
                                    <td style="text-align:right; padding:6px 8px; border-bottom:1px solid #efefef;">
                                        <t t-esc="'{0:,.2f}'.format(line.get('total_ordered_qty', 0))"/>
                                    </td>
                                    <td style="text-align:right; padding:6px 8px; border-bottom:1px solid #efefef;">
                                        <t t-esc="'{0:,.2f}'.format(line.get('total_delivered_qty', 0))"/>
                                    </td>
                                    <td style="text-align:right; padding:6px 8px; border-bottom:1px solid #efefef;">
                                        <t t-esc="'{0:,.2f}'.format(line.get('total_invoiced_qty', 0))"/>
                                    </td>
                                    <td style="text-align:right; padding:6px 8px; border-bottom:1px solid #efefef;">
                                        <t t-esc="'{0:,.2f}'.format(line.get('total_amount', 0))"/>
                                    </td>
                                </tr>
                            </t>

                            <tr style="border-top:2px solid; background:#f3f4f6; font-weight:800;">
                                <td style="text-align:right; padding:10px;">Grand Total</td>
                                <td style="text-align:right; padding:10px;">
                                    <t t-esc="'{0:,.2f}'.format(sum([s.get('total_ordered_qty', 0) for s in report_data]))"/>
                                </td>
                                <td style="text-align:right; padding:10px;">
                                    <t t-esc="sum([s.get('total_delivered_qty', 0) for s in report_data])"/>
                                </td>
                                <td style="text-align:right; padding:10px;">
                                    <t t-esc="'{0:,.2f}'.format(sum([s.get('total_invoiced_qty', 0) for s in report_data]))"/>
                                </td>
                                <td style="text-align:right; padding:10px;">
                                    <t t-esc="'{0:,.2f}'.format(sum([s.get('total_amount', 0) for s in report_data]))"/>
                                </td>
                            </tr>
                        </t>
                        <t t-if="not report_data">
                            <tr>
                                <td colspan="6" style="text-align:center; padding:18px; color:#666;">No data available for the selected filters.</td>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </div>
        </t>
    </t>
</template>

</odoo>
